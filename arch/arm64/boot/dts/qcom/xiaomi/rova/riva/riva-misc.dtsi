&spi_7{
        status = "ok";
        spi_ir@1 {
                compatible = "qcom,spi-msm-codec-slave";
                reg = <1>;
                spi-max-frequency = <50000000>;
                spi-cpol;
                status = "ok";
        };
};

&i2c_2  {
	aw2013@45 {
		aw2013,white {
			aw2013,name = "white";
			aw2013,id = <0>;
			aw2013,max-brightness = <255>;
			aw2013,max-current = <1>;
			aw2013,rise-time-ms = <2>;
			aw2013,hold-time-ms = <1>;
			aw2013,fall-time-ms = <2>;
			aw2013,off-time-ms = <1>;
		};
	};
};
